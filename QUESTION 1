package labTest1;

import java.util.Scanner;

public class Question1 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner scanMe = new Scanner (System.in);
		
		System.out.println("Enter the number of items: ");
		double item1 = scanMe.nextDouble();
		
		System.out.println("Enter the price for the first item: ");
		double p1 = scanMe.nextDouble();
		System.out.println("Enter the quantity for the first item: ");
		int q1 = scanMe.nextInt();
		System.out.println("Enter the price for the second item: ");
		double p2 = scanMe.nextDouble();
		System.out.println("Enter the quantity for the second item: ");
		double q2 = scanMe.nextInt();
		System.out.println("Enter the price for the third item: ");
		double p3 = scanMe.nextDouble();
		System.out.println("Enter the quantity for the third item: ");
		double q3 = scanMe.nextInt();
		
		double tot1 = (p1 * q1);
		System.out.println("Price1: " + tot1);
		double tot2 = (p2 * q2);
		System.out.println("Price2: " + tot2);
		double tot3 = (p3 * q3);
		System.out.println("Price3: " + tot3);
		double tot = (tot1 + tot2 + tot3);
		System.out.println("Total: " + tot);
		double discount1 = 20/100*tot;
		double discount2 = 10/100*tot;
		
		if (tot >= 100) {
			System.out.println("Price after discount is RM: " + discount1);
			
		}else if (tot < 100) {
			System.out.println("Price after discount is RM: " + discount2);
		}
		
	}

}

